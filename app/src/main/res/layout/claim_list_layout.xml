<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:id="@+id/climageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cltv_tanggal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/climageView"
        android:layout_toEndOf="@+id/climageView"
        android:layout_weight="1"
        android:gravity="left"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cltv_diajukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cltv_tanggal"
        android:layout_alignStart="@+id/cltv_tanggal"
        android:layout_below="@+id/cltv_tanggal"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:text="TextView" />

    <TextView
        android:id="@+id/cltv_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:text="TextView"
        android:layout_below="@+id/cltv_tanggal"
        android:layout_toRightOf="@+id/cltitik"
        android:layout_toEndOf="@+id/cltitik"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />
    <TextView
        android:id="@+id/cltv_jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:text="TextView"
        android:layout_below="@+id/cltv_diajukan"
        android:layout_alignLeft="@+id/cltv_diajukan"
        android:layout_alignStart="@+id/cltv_diajukan" />

    <ImageView
        android:id="@+id/cliv_status"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_report"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/cltitik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â·"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/cltv_tanggal"
        android:layout_toRightOf="@id/cltv_diajukan"
        android:layout_toEndOf="@+id/cltv_diajukan" />

</RelativeLayout>